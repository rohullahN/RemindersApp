<Window x:Class="ReminderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReminderApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <StackPanel x:Name="EditButton">
        <Viewbox Stretch="Uniform">
            <Calendar x:Name="Calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>

        </Viewbox>
        <TextBlock x:Name="myTextblock" Text=""/>
        <Button x:Name="EditButton1" Content="Edit" Margin="199,30,40,0" Width="50" Click="EditButton1_Click"/>

    </StackPanel>
</Window>
